<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Galería de Fotos</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .gallery-container {
      max-width: 600px;
      margin: 0 auto;
      text-align: center;
    }
    img {
      max-width: 100%;
      height: auto;
    }
    button {
      margin: 10px;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
    }
  </style>
</head>
<body>

<div class="gallery-container">
  <img id="galleryImage" src="" alt="Foto">
  <div>
    <button onclick="previousImage()">Anterior</button>
    <button onclick="nextImage()">Siguiente</button>
  </div>
</div>

<script>
  // Array de URLs de las fotos
  const photoUrls = [
    "https://i.imgur.com/VuQU4VG.jpeg",
    "https://i.imgur.com/SL1VJqN.jpeg",
    "URL_DE_LA_TERCERA_FOTO",
    // Agrega aquí las URLs de las fotos adicionales
  ];

  let currentPhotoIndex = 0;

  function showCurrentImage() {
    const imgElement = document.getElementById("galleryImage");
    imgElement.src = photoUrls[currentPhotoIndex];
  }

  function nextImage() {
    currentPhotoIndex++;
    if (currentPhotoIndex >= photoUrls.length) {
      currentPhotoIndex = 0;
    }
    showCurrentImage();
  }

  function previousImage() {
    currentPhotoIndex--;
    if (currentPhotoIndex < 0) {
      currentPhotoIndex = photoUrls.length - 1;
    }
    showCurrentImage();
  }

  // Mostrar la primera imagen al cargar la página
  showCurrentImage();
</script>

</body>
</html>
